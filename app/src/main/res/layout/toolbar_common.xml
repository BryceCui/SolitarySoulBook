<?xml version="1.0" encoding="utf-8"?>
<com.cuipengyu.solitarysoulbook.widget.CommonToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_common"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/base_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <android.support.v7.widget.SearchView
            android:layout_margin="10dp"
            android:background="@drawable/toolbar_searchview_shap_bg"
            android:layout_toEndOf="@+id/base_toolbar_back"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/base_toolbar_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/base_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/base_toolbar_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</com.cuipengyu.solitarysoulbook.widget.CommonToolbar>